<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
  HRE 연결마스터 CustomUI Ribbon - BEP Style
  Version: 2.1
  Date: 2026-01-25
-->
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
  <ribbon>
    <tabs>
      <tab id="tabHRE" label="HRE 연결마스터" insertAfterMso="TabHome">

        <!-- 기타 -->
        <group id="grpEtc" label="기타">
          <button id="btnLink"
                  label="링크"
                  imageMso="HyperlinkCreate"
                  size="large"
                  onAction="IRSPO"
                  screentip="SPO 사이트 열기"/>

          <button id="btnVersion"
                  label="버전 확인"
                  imageMso="Info"
                  size="normal"
                  onAction="IRVersion"/>

          <button id="btnPeople"
                  label="담당자 현황"
                  imageMso="PeoplePane"
                  size="normal"
                  onAction="Manage_People"/>

          <button id="btnSynchro"
                  label="CoA 동기화"
                  imageMso="Synchronize"
                  size="normal"
                  onAction="Synchro_CoA"/>

          <button id="btnExport"
                  label="송부용 추출"
                  imageMso="ExportToExcel"
                  size="normal"
                  onAction="Export_File"/>
        </group>

        <!-- 1단계: 기본정보 설정 -->
        <group id="grpStep1" label="1단계: 기본정보 설정">
          <button id="btnSPO"
                  label="SPO 홈 설정"
                  imageMso="DatabaseAccess"
                  size="large"
                  onAction="SetSPO"
                  screentip="SharePoint 사이트 URL 설정"/>

          <button id="btnDirectory"
                  label="파일(폴더) 설정"
                  imageMso="FolderOpen"
                  size="large"
                  onAction="SetDirectory"
                  screentip="결산 폴더 경로 설정"/>
        </group>

        <!-- 2단계: 정보 업데이트 -->
        <group id="grpStep2" label="2단계: 정보 업데이트">
          <button id="btnDate"
                  label="결산연월 설정"
                  imageMso="DateAndTimeInsertGallery"
                  size="large"
                  onAction="SetDate"
                  screentip="결산 기준 연월 설정"/>

          <button id="btnAppendCorp"
                  label="대상법인 추가"
                  imageMso="AddInManager"
                  size="normal"
                  onAction="AppendCorp"
                  screentip="연결 대상 법인 추가"/>

          <button id="btnScope"
                  label="Scope 설정"
                  imageMso="FilterBySelection"
                  size="normal"
                  onAction="SetScope"
                  screentip="연결범위 설정"/>
        </group>

        <!-- 환율 -->
        <group id="grpER" label="환율">
          <button id="btnERFlow"
                  label="평균환율 조회"
                  imageMso="CalculateFx"
                  size="large"
                  onAction="GetER_Flow"
                  screentip="P/L 적용 평균환율 조회"/>

          <button id="btnERSpot"
                  label="기말환율 조회"
                  imageMso="CurrencyFormatCurrency"
                  size="large"
                  onAction="GetER_Spot"
                  screentip="B/S 적용 기말환율 조회"/>
        </group>

        <!-- 3단계: 확인 및 합산 -->
        <group id="grpStep3" label="3단계: 확인 및 합산">
          <button id="btnUpdate"
                  label="CoA 확인 및&#xA;데이터 합산"
                  imageMso="TableUpdate"
                  size="large"
                  onAction="Update"
                  screentip="PTB 데이터 새로고침 및 CoA 매핑 확인"
                  supertip="SharePoint에서 PTB 데이터를 가져오고, CoA 매핑이 없는 항목을 표시합니다."/>
        </group>

        <!-- 4단계: 검증 -->
        <group id="grpStep4" label="4단계: 검증">
          <button id="btnVerifyBSPL"
                  label="합산 검증"
                  imageMso="AcceptInvitation"
                  size="large"
                  onAction="Verify_BSPL"
                  screentip="재무제표 차대평형 검증"/>
        </group>

        <!-- 5단계: 취득, 처분 BSPL -->
        <group id="grpStep5" label="5단계: 취득, 처분 BSPL">
          <button id="btnUpdateAD"
                  label="CoA 확인 및&#xA;데이터 합산"
                  imageMso="TableUpdate"
                  size="large"
                  onAction="Update_AD"
                  screentip="취득/처분 데이터 합산"/>

          <button id="btnVerifyAD"
                  label="합산 검증"
                  imageMso="TableCheckNamesOnForm"
                  size="normal"
                  onAction="Verify_AD"
                  screentip="취득/처분 검증"/>
        </group>

        <!-- 6단계: CoA 마스터 -->
        <group id="grpStep6" label="6단계: CoA 마스터">
          <button id="btnVerifyMaster"
                  label="맵핑 검증"
                  imageMso="DatabaseCheckLinkedTables"
                  size="large"
                  onAction="Verify_Master"
                  screentip="CoA 마스터 무결성 검증"/>
        </group>

        <!-- 검색 -->
        <group id="grpSearch" label="검색">
          <button id="btnFilter"
                  label="필터링"
                  imageMso="SortDialogClassic"
                  size="large"
                  onAction="FilterSheet"
                  screentip="현재 시트 필터 적용"/>

          <button id="btnUnfilter"
                  label="필터링 해제"
                  imageMso="FilterClearAllFilters"
                  size="large"
                  onAction="UnfilterSheet"
                  screentip="필터 해제"/>
        </group>

        <!-- 쿼리 보호 -->
        <group id="grpQueryProtect" label="쿼리 보호">
          <button id="btnProtect"
                  label="쿼리 잠금"
                  imageMso="Lock"
                  size="normal"
                  onAction="ProtectQuery"
                  screentip="Power Query 보호"/>

          <button id="btnUnprotect"
                  label="쿼리 잠금 해제"
                  imageMso="Unlock"
                  size="normal"
                  onAction="UnprotectQuery"
                  screentip="Power Query 보호 해제"/>
        </group>

        <!-- 정보 -->
        <group id="grpInfo" label="정보">
          <button id="btnManual"
                  label="사용 설명서"
                  imageMso="Help"
                  size="normal"
                  onAction="IRManual"/>

          <button id="btnBug"
                  label="버그 리포트"
                  imageMso="MacroError"
                  size="normal"
                  onAction="IRBugReport"/>
        </group>

      </tab>
    </tabs>
  </ribbon>
</customUI>
